package com.beetlestech.nfe.fw.core.util.validator.impl;

import com.maxiaohua.genealogy.fw.core.util.validator.AnnotationValidator;
import com.maxiaohua.genealogy.fw.core.util.validator.type.ByteSize;


public class ByteSizeValidator extends AnnotationValidator {
    private int max = 0;
    private int min = 0;
    private String charSet = "";

    @Override
    protected void prepare() {
        if (annotation != null) {
            max = ((ByteSize) annotation).max();
            min = ((ByteSize) annotation).min();
            charSet = ((ByteSize) annotation).charSet();
            errorCode = ((ByteSize) annotation).errorCode();

        } else { 
            errorCode = com.maxiaohua.genealogy.fw.core.util.validator.type.ByteSize.DEFAULT_ERROR_CODE;
        }
    }

    @Override
    protected boolean isValid() {
        boolean result = true;

        try {
            byte[] target = fieldValue.toString().getBytes(charSet);
            if (target.length < min || (max > 0 && target.length > max)) {
                result = false;
            }
        } catch (Exception e) {
            result = false;
        }

        return result;
    }

    @Override
    public String[] getMsgParameters() {
        return new String[] { String.valueOf(min), String.valueOf(max) };
    }

}